	name = Mike Frey
	email = mike.frey@tstmedia.com
[github]
	user = mikefrey
	token = 494884b48bfd1b88c21f27f175ef1ce9
[push]
	default = tracking
[color]
	status = auto
	diff = auto
	branch = auto
  ui = auto
[alias]
  a = add
  aa = add .
  # Files that are in the staging area
  added = diff --cached --name-only
  amend = commit --amend
  ammend = commit --amend
	br = branch
  branches-with = branch -a --contains
  branchname = !git branch | grep '^* ' | awk '{ print $2 }'
  brs = branch -a
  c = commit
  changes = "!f() { git log --pretty=format:'* %s' $1..$2; }; f"
	ci = commit
  #cm = commit -m
  cm = "!f() { git commit -m \"$*\"; }; f"
	co = checkout
  d = diff
  dc = diff --cached
  dcm = !git diff --cached | subl
  deleted = ls-files --deleted
  details = log -n1 -p --format=fuller
  dm = !git diff | subl
  f = fetch
  ff = !git fetch && git wtf
  head = log -n1
  lg = log --graph --abbrev-commit --date=relative
  ls = ls-files
  m = merge
  mergeupstream = !git fetch upstream && git merge upstream/master master
  nb = checkout -b
  # Not yet added - doesn't include ignored files
  new = ls-files --others --exclude-standard
  p = push
  pt = !git push && git push --tag
  ra = rebase --abort
  rc = rebase --continue
  rs = rebase --skip
  rr = !git ls-files --deleted | xargs git rm
  s = status
	st = status
  searchlogs = !git log --oneline | grep
  st = status
  sub = submodule update --init --recursive
  today = log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative
  u = pull
  unstage = reset HEAD
  ur = pull --rebase
[core]
	editor = subl -w
  excludesfile = ~/.gitexcludes
  quotepath = false
  autocrlf = input
[format]
  # git log uses --pretty format by default, so this changes the default format
  # Now log uses --pretty by default
  # 4436819 Gabe Berke-Williams - One line prompt (2 hours ago)
  pretty = %Cred%h%Creset %aN -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset
[diff]
  # Git diff will use (i)ndex, (w)ork tree, (c)ommit and (o)bject
  # instead of a/b/c/d as prefixes for patches
  mnemonicprefix = true
  tool = opendiff
[merge]
  tool = opendiff
[difftool]
  prompt = false
[mergetool]
  prompt = false
[rerere]
  # http://gitfu.wordpress.com/2008/04/20/git-rerere-rereremember-what-you-did-last-time/
  enabled = true
